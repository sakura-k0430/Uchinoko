<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th style="width: 15%">グループ名</th>
      <th>紹介文</th>
      <th style="width: 15%">メンバー人数</th>
      <th style="width: 15%"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td>
          <% if group.group_image.attached? %>
            <%= image_tag group.group_image,size:"50x50", class:"mt-3 rounded-circle"; %>
          <% else %>
            <%= image_tag 'no_image', size: "50x50" %>
          <% end %>
        </td>
        <td><%= link_to group.name,group_path(group) %></td>
        <td><%= group.introduction %></td>
        <td><%= group.group_customers.count %></td>
          <% if group.is_owned_by?(current_customer) %>
          <td><%= link_to '編集', edit_group_path(group), class: "group_#{group.id} btn btn-sm btn-success" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>