<h1>迷子掲示板　投稿編集画面</h1>

<%= form_with model: @lost_pet, url: lost_pet_path(@lost_pet.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <h4>画像</h4>
  <%= f.file_field :lost_pet_image, accept: "image/*" %>

  <%= f.submit '変更内容保存' %>

<% end %>