<h2>
  <i class="fa-solid fa-paw" style="color: #20b2aa;"></i>
  迷子掲示板ハッシュタグ
  <i class="fa-solid fa-paw" style="color: #20b2aa;"></i>
</h2>
<h3 style="color: #20b2aa;">#<%= @tag.hashname %></h3>

<div class="card-deck" style="width:30rem">
    <% @galleries.each do |lost_pet| %>
      <div class="card mx-auto shadow-lg">
        <%= link_to lost_pet_path(lost_pet.id) do %>
          <%= image_tag lost_pet.lost_pet_image, class:"card-img-top"; %>
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-3">
              <%= image_tag lost_pet.customer.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
            </div>
            <div class="col-8">
              <p class="card-title">
                <strong><i class= "fa-solid fa-camera-retro"></i><span><%= link_to lost_pet.title, lost_pet_path(lost_pet.id) %></span></strong>
              </p>
              <span><i class="fas fa-user"></i> By<%= link_to lost_pet.customer.name, customer_path(lost_pet.customer.id) %>｜ </span>
              <span><%= link_to "#{lost_pet.lost_pet_comments.count} コメント", lost_pet_path(lost_pet.id) %></span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>