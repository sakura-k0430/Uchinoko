<h2><%= @customer.name %>さんのお気に入り投稿一覧</h2>

<table class="table table-hover table-inverse">
  <tbody>
    <tr>
      <th>投稿タイトル</th>
      <th>投稿本文</th>
      <th>ユーザーアイコン</th>
      <th>ユーザー名</th>
    </tr>
    </tbody>
    <tbody>
    <% @favorite_galleries.each do |gallery| %>
      <tr>
        <td><%= link_to gallery.title, gallery_path(gallery) %></td>
        <td><%= gallery.body%></td>
        <td><%= image_tag gallery.customer.get_profile_image(100,100), class:"mt-3 rounded-circle"; %></td>
        <td><%= link_to gallery.customer.name, customer_path(gallery.customer.id) %></td>
      </tr>
    <% end %>
  </tbody>
  <tbody>
    <% @favorite_lost_pets.each do |lost_pet| %>
      <tr>
        <td><%= link_to lost_pet.title, lost_pet_path(lost_pet.id) %></td>
        <td><%= lost_pet.body %></td>
        <td><%= image_tag lost_pet.customer.get_profile_image(100,100), class:"mt-3 rounded-circle"; %></td>
        <td><%= link_to lost_pet.customer.name, customer_path(lost_pet.customer.id) %></td>
      </tr>
    <% end %>
  </tbody>
  <tbody>
    <% @favorite_foster_parents.each do |foster_parent| %>
      <tr>
        <td><%= link_to foster_parent.title, foster_parent_path(foster_parent.id) %></td>
        <td><%= foster_parent.body %></td>
        <td><%= image_tag foster_parent.customer.get_profile_image(100,100), class:"mt-3 rounded-circle"; %></td>
        <td><%= link_to foster_parent.customer.name, customer_path(foster_parent.customer.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>