<%=link_to "グループを作成する",new_group_path %> |
<%=link_to "グループ一覧",groups_path %>
<h3>フォロー一覧</h3>

<% if @customers.exists? %>
  <% @customers.each do |customer| %>
    <table>
      <tbody>
        <tr>
          <th>ユーザーアイコン</th>
          <th>ユーザー名</th>
          <th></th>
          <th></th>
        </tr>
      </tbody>
      <tbody>
        <tr>
          <td><%= image_tag customer.get_profile_image(100,100) %></td>
          <td><%= link_to customer.name, customer_path(customer.id) %></td>
          <td>フォロー数: <%= customer.followings.count %></td>
          <td>フォロワー数: <%= customer.followers.count %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>