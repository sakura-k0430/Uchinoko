<button type="button" class="btn btn-info">
  <%= link_to "ギャラリー投稿する", new_gallery_path %>
</button>

<h1>
  <i class="fa-solid fa-paw" style="color: #20b2aa;"></i>
  ギャラリー一覧
  <i class="fa-solid fa-paw" style="color: #20b2aa;"></i>
</h1>

<div class="card-list-container py-5">
  <% @galleries.each do |gallery| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <%= image_tag gallery.gallery_image, class:"card-img-top"; %>
        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <%= image_tag gallery.customer.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
            </div>
            <div class="col-10">
              <p class="card-title">
                <strong><i class="far fa-flag"></i><span><%= link_to gallery.title, gallery_path(gallery.id) %></span></strong>
              </p>
              <p class="card-text">本文：<%= gallery.body %></p>
              <span><i class="fas fa-user"></i> By<%= link_to gallery.customer.name, customer_path(gallery.customer.id) %>｜ </span>
              <span><%= link_to "#{gallery.gallery_comments.count} コメント", gallery_path(gallery.id), class:"text-dark" %></span>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>