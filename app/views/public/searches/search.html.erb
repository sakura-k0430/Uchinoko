<h2>検索結果一覧</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがcustomerの時 -->
  <% if @range == "Customer" %>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @range == "Gallery" %>
    <!--検索対象モデルがCustomerではない時(= 検索対象モデルがGalleryの時) -->
    <tbody>
      <% @galleries.each do |gallery| %>
        <tr>
          <td><%= gallery.title %></td>
          <td><%= gallery.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @range == "LostPet" %>
    <!--検索対象モデルがCustomerとGalleryではない時(= 検索対象モデルがLostPetの時) -->
    <tbody>
      <% @lost_pets.each do |lost_pet| %>
        <tr>
          <td><%= lost_pet.title %></td>
          <td><%= lost_pet.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがCustomerとGalleryとLostPetではない時(= 検索対象モデルがFosterParentの時) -->
    <tbody>
      <% @foster_parents.each do |foster_parent| %>
        <tr>
          <td><%= foster_parent.title %></td>
          <td><%= foster_parent.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
