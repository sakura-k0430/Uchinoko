<h2>里親の掲示板詳細</h2>

<p>ユーザーネーム：<%= @foster_parent.customer.name %></p>
<p>投稿ユーザー画像：<%= image_tag @foster_parent.customer.get_profile_image(100,100) %></p>
<h2>タイトル</h2>
<p><%= @foster_parent.title %></p>

<h2>本文</h2>
<p><%= @foster_parent.body %></p>

<h2>画像</h2>
  <%= image_tag @foster_parent.foster_parent_image, size: "300x300" %>

<p>投稿日：<%= @foster_parent.created_at.strftime('%Y/%m/%d') %></p>

<div>
  <p>コメント件数：<%= @foster_parent.foster_parent_comments.count %></p>
  <% @foster_parent.foster_parent_comments.each do |foster_parent_comment| %>
    <p><%= image_tag foster_parent_comment.customer.get_profile_image(100,100) %></p>
    <%= foster_parent_comment.customer.name %>
    <%= foster_parent_comment.created_at.strftime('%Y/%m/%d') %><%= foster_parent_comment.comment %>
    <% if foster_parent_comment.customer == current_customer %>
      <%= link_to "削除", foster_parent_foster_parent_comment_path(foster_parent_comment.foster_parent, foster_parent_comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@foster_parent, @foster_parent_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>

<% if @foster_parent.customer == current_customer %>
<%= link_to "編集", edit_foster_parent_path(@foster_parent.id) %>
<%= link_to "削除", foster_parent_path(@foster_parent.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>

<!--投稿につけられたお気に入りにログインしているユーザ(自分)が含まれているか判断するメソッド-->
<% if @foster_parent.favorited_by?(current_customer) %>
    <p>
      <%= link_to foster_parent_foster_parent_favorites_path(@foster_parent), method: :delete do %>
        ♥<%= @foster_parent.foster_parent_favorites.count %> お気に入り
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to foster_parent_foster_parent_favorites_path(@foster_parent), method: :post do %>
        ♡<%= @foster_parent.foster_parent_favorites.count %>  お気に入り
      <% end %>
    </p>
<% end %>