<h1>里親掲示板　投稿編集画面</h1>

<%= form_with model: @foster_parent, url: foster_parent_path(@foster_parent.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <h4>画像</h4>
  <%= f.file_field :foster_parent_image, accept: "image/*" %>

  <%= f.submit '変更内容保存' %>

<% end %>