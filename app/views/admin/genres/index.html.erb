<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

<h2>
  <i class="fa-solid fa-stethoscope" style="color: #20b2aa;"></i>
  病院ジャンル一覧・追加
  <i class="fa-solid fa-stethoscope" style="color: #20b2aa;"></i>
</h2>
  <div class="form-group">
  <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>

    <td><%= f.label :"ジャンル名", class: "col-md-2" %></td>
    <td><%= f.text_field :name, class: "mr-5" %></td>
    <td><%= f.submit'新規登録',class: "btn btn-primary" %></td>

  <% end %>
  </div>

<table class="table genre-index col-md-8">
  <thead>
    <tr>
      <th>ジャンル</th>
    <tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
       </div>
    <div class="col-md-2"></div>
  </div>
</div>