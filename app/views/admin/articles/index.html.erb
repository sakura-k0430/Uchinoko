<h1>コラム一覧</h1>

<% @articles.each do |article| %>
  <p>タイトル</p>
  <span>
  <%= link_to article.title, admin_article_path(article.id) %>
  </span>
  <p>画像</p>
  <%= image_tag article.article_image, size: "200x200" %>

<% end %>

<h1>コラム投稿</h1>
<%= form_with model: @article, url: admin_articles_path, method: :post do |f| %>
<h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <h4>画像</h4>
  <%= f.file_field :article_image, accept: "image/*" %>

  <%= f.submit '投稿' %>
<% end %>