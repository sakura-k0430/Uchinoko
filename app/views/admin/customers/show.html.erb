<div class="container">
  <div class="row">
    <table>
      <thead>
        <tr>
          <th>
            <h3>
              <i class="fa-solid fa-cat" style="color: #20b2aa;"></i>
              <%= @customer.name %>さんの会員詳細
              <i class="fa-solid fa-cat" style="color: #20b2aa;"></i>
            </h3>
          </th>
        </tr>
      </thead>
      <thead>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <th>住んでいる都道府県</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= @customer.introduction %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <span style="margin-left:90px; color:<%= @customer.is_deleted ? 'gray' : 'green' %>;"><%= @customer.is_deleted ? '退会済み' : '有効' %></span>
          </td>
        </tr>
        <tr>
          <td><%= link_to '編集する', edit_admin_customer_path(@customer), class: 'btn btn-success btn-space' %></td>
        </tr>
      </thead>
    </table>
  </div>
</div>